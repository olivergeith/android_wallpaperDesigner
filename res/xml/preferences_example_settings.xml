	    <PreferenceCategory android:title="Backup and Restore Designs"/>
	    
	    <Preference 
		    android:key="backupALLDesigns"
		    android:title="Backup all Designs (one Zip)"
		    android:icon="@android:drawable/ic_menu_save"
		    android:summary="Backup all your designs into a zip-File" 
            />
	    <Preference 
		    android:key="backupALLDesignsInManyZips"
		    android:title="Backup all Designs (many Zips)"
		    android:icon="@android:drawable/ic_menu_save"
		    android:summary="Backup all your designs into many zip-Files" 
            />
	    <Preference 
		    android:key="zipOneDesign"
		    android:title="Backup one Design (in one Zip)"
		    android:icon="@android:drawable/ic_menu_save"
		    android:summary="Zip one of your designs" 
	        />
	    <Preference 
		    android:key="restoreDesigns"
		    android:title="Restore Designs"
		    android:icon="@android:drawable/ic_menu_upload"
		    android:summary="Restore designs from a zip-File" 
            />

	    	    	    
	<PreferenceCategory android:title="Delete your local Designs"/>
	    <Preference 
		    android:key="deleteSettings"
		    android:title="Delete Design"
		    android:icon="@android:drawable/ic_menu_delete"
		    android:summary="Delete one of your designs" 
            />
	    <Preference 
		    android:key="deleteALLDesigns"
		    android:title="Delete ALL Designs !!!!"
		    android:icon="@android:drawable/ic_delete"
		    android:summary="Delete all your designs....ATTENTION!!!" 
            />
	<PreferenceCategory 
	    android:title="More ...."
	    android:key="moreSuperKey"
	    />
	    <Preference 
		    android:key="publishOneDesign"
		    android:title="Publish Featured Design"
		    android:icon="@android:drawable/ic_menu_share"
		    android:summary="Publish Design -> Featured" 
            />
	    <Preference 
		    android:key="publishPremiumDesign"
		    android:title="Publish Premium Design"
		    android:icon="@android:drawable/ic_menu_share"
		    android:summary="Publish Design -> Premium" 
            />
	    	   <Preference 
		    android:key="backupALLDesignsForUpload"
		    android:title="Backup ALL Designs to extra Backup-Dir"
		    android:icon="@android:drawable/ic_menu_save"
		    android:summary="Backup all your designs into many zip-Files for uploading purposes" 
            />
		    	    	    	    	        	    	    	    	    	    		
	    	    
