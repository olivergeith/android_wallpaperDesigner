<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" 
 xmlns:seekbarpreference="http://schemas.android.com/apk/lib/de.geithonline.android.basics.preferences">
    	    
    <PreferenceCategory android:title="Help on Designs"/>
    
        <Preference 
		    android:key="designHowto"
	        android:title="Howto: Designs"
	        android:icon="@android:drawable/ic_menu_help"
	        >
	        <intent android:action="android.intent.action.VIEW"   android:data="http://olivergeith.bplaced.net/howtos/HowToDesigns.html" />
	    </Preference>
    
    <PreferenceCategory android:title="Download Designs"/>
        
        <Preference 
		    android:key="unzipSettings"
		    android:icon="@drawable/examplesettings"
		    android:title="Free Designs"
		    android:summary="Download lots of free Example-Designs!" 
            />
	    <Preference 
		    android:key="unzipSettingsPremium"
		    android:icon="@drawable/examplesettings_premium"
		    android:title="Premium Designs"
		    android:summary="Download Premium-Designs! Only for Premium Users!" 
            />

	    <Preference 
		    android:key="unzipFeaturedSettings"
		    android:icon="@drawable/examplesettings"
		    android:title="Featured Designs"
		    android:summary="Download free Designs! Hurry up to get those designs...the featured Designs will change frequently!" 
            />

	    <Preference 
		    android:key="unzipSharedSettings"
		    android:icon="@drawable/examplesettings"
		    android:title="Community Designs"
		    android:summary="Download free Designs shared by other users!" 
            />
	
	<PreferenceCategory android:title="Share Designs"/>
	    <Preference 
		    android:key="shareOneDesign"
		    android:title="Share Design"
		    android:icon="@android:drawable/ic_menu_share"
		    android:summary="Share one of your designs with our users-community!" 
            />

	    	    	    
