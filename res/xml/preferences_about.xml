<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" 
 xmlns:seekbarpreference="http://schemas.android.com/apk/lib/de.geithonline.android.basics.preferences">
     		    	    
    <PreferenceCategory android:title="@string/app_name">
	    <Preference 
		    android:key="premium"
    		android:defaultValue="false"
		    android:title="Premium" 
            />
        
  	    <Preference 
		    android:key="applink"
	        android:title="The Wallpaper Designer on XDA"
	        android:icon="@drawable/xda"
	        >
	        <intent android:action="android.intent.action.VIEW"
	            android:data="http://forum.xda-developers.com/showthread.php?t=2740159" />
	    </Preference>
        
	    <Preference 
	        android:title="My Apps on Google Play" 
	        android:icon="@drawable/googleplay"
	        >
	        <intent android:action="android.intent.action.VIEW"
	            android:data="https://play.google.com/store/apps/developer?id=Oliver+Geith" />
	    </Preference>
	    
	    </PreferenceCategory>
	    
    <PreferenceCategory android:title="Internal Options">
        <CheckBoxPreference 
		    android:key="debug"
    		android:defaultValue="false"
		    android:title="Debugging"
		    android:summary="Do not use this! This enables some internal debugging infomation..." 
            />
        </PreferenceCategory>
    
</PreferenceScreen>